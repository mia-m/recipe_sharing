<%= render :partial => 'form' %>

<%= form_for(@recipe, :remote => true) do |f| %>
  <div id= "recipe_errors" style="display:none"></div>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
  </div>
  <div>
    <%= f.label :body %><br />
    <%= f.text_area :body %><br />
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>

<br />
<%= link_to "Cancel", :back, :remote => true %>